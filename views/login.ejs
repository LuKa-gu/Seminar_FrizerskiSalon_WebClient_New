<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="UTF-8">
    <title>Prijava</title>

    <!-- Bootswatch United theme -->
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.5.0/united/bootstrap.min.css"
    >

    <link rel="stylesheet" href="/stylesheets/stil.css">
</head>
<body class="bg-light">

<div class="container mt-3">
    <div id="alertContainer"></div>
</div>

<div class="page-wrapper container d-flex flex-column align-items-center">
    <!-- Logo -->
    <div class="znak mb-4">
        <img src="/images/frizerskisalon_znak.png"
             alt="Frizerski salon"
             class="img-fluid">
    </div>

    <!-- Naslov (brez ikone) -->
    <h1 class="mb-4 no-icon">Prijava frizerja</h1>

    <!-- Login card -->
    <div class="card shadow-sm login-card">
        <div class="card-body">

            <form id="loginForm">
                <div class="form-group">
                    <label for="username">Uporabniško ime</label>
                    <input
                        type="text"
                        id="username"
                        class="form-control"
                        placeholder="Vnesi uporabniško ime"
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="password">Geslo</label>
                    <input
                        type="password"
                        id="password"
                        class="form-control"
                        placeholder="Vnesi geslo (min 8 znakov)"
                        required
                    >
                </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Prijava
                    </button>
                </form>

            </div>
        </div>

        <!-- Signup -->
        <p class="mt-3">
            Še nimaš računa?
            <a href="/signup" class="custom-link">Registriraj se</a>
        </p>

    </div>
</div>

<script type="module" src="/javascripts/login.js"></script>
<!-- Alerti -->
<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

</body>
</html>
